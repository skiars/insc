{
    "wordWrap": "on",
    "comments": {
        "blockComment": [ "<!--", "-->" ]
    },
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["<s>", "</s>"],
        ["<ins>", "</ins>"],
        ["<res>", "</res>"]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["<s>", "</s>"],
        ["<ins>", "</ins>"],
        ["<res>", "</res>"]
    ],
    "folding": {
      "markers": {
        "start": "<s>",
        "end": "</s>"
      }
    }
}